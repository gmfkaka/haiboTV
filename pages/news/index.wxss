/**index.wxss**/
@import "../../wxParse/wxParse.wxss";
.n_wrapper{
  width:100%;
  box-sizing: border-box;
  padding: 0 24rpx;
}
.n_listWrapper{
  width:100%;
  padding: 0 0 32rpx;
}
.n_list{
  width:100%;
  height:134rpx;
  display: flex;
  border-top:1px solid rgba(229,229,229,1);
  padding: 32rpx 0;  
}
.n_list_left{
  width:190rpx;
  height:134rpx;
}
.n_list_left image{
  max-width:100%;
  height:100%;
}
.n_list_right{
  display: flex;
  flex-direction: column;
  margin-left:20rpx;
}
.n_listTitle{
  font-size:30rpx;
  font-family:PingFangSC-Regular;
  color:rgba(51,51,51,1);
  height:82rpx;
  margin-bottom:22rpx;
}
.n_listTime{
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  color:rgba(153,153,153,1);
  height:33rpx;
}
 /*  加载更多   */
.n_weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.n_weui-loadmore {
  width: 100%;
  font-size: 14px;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.n_weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.n_noData{
  width:100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-top:80rpx;
}
.d_indexImg2{
  width:100%;
  padding-top:25rpx;
  height:392rpx;
  background-color: #fff;
}
.d_indexImg image,.d_indexImg2 image{
  width:100%;
  height:100%;
}

.n_newsrule{
  margin-top: 50rpx;
}
