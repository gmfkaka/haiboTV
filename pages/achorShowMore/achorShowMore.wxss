/* pages/achorShowMore/achorShowMore.wxss */
.liveModel {
  width: calc(50vw - 2rpx);
  height: 321rpx;

}

.videoPlayBox {
  /* width: 70rpx; */
  height: 34rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 20rpx;
  display: flex;
  padding: 0 12rpx;
  align-items: center;
  justify-content: space-between;
  position: absolute;
  margin: 10rpx;
}

.videoPlayView {
  width: 8rpx;
  height: 8rpx;
  border-radius: 8rpx;
  background: #fe3883;
}

.videoPlayText {
  font-size: 18rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  margin: 0 10rpx;
  margin-top: -2rpx;
}

.numIcon {
  width: 14rpx;
  height: 18rpx;
  margin-right: 10rpx;
}

.numBox {
  display: flex;
  align-items: center;
  color: #fff;
  position: absolute;
  bottom: 14rpx;
  right: 10rpx;
  font-size: 18rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.videoBack {
  width: 375rpx;
  height: 200rpx;
}

.topView {
  position: relative;
}

.bottomView {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  padding:0 18rpx;
}
.morePage {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}