/* pages/list/list.wxss */
.view{
  width:100%;
  height:100%;
  background-color:#FCFCFC;
}
.viewList{
  width:95%;
  height:100%;
  margin: 20rpx 2.5%;
}
.list{
  width:100%;
  height:450rpx;
  background-color: #fff;
  border:1px solid #F5F5F5;
  margin-bottom: 40rpx;
  border-radius:10rpx;
  position: relative;
}
.listImg{
  width:calc(100% - 31rpx);
  margin:15rpx;  
  margin-bottom: 0rpx;
  height:340rpx;
}
.listImg image{
  width:100%;
  height:100%;
}
.listTitle{
  width:calc(100% - 31rpx);
  height:109rpx;
  margin: 0 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size:28rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}
.statusText{
  position: absolute;
  width:auto;
  padding: 0 14rpx;
  height:50rpx;
  color:#fff;
  font-size: 24rpx;
  top:30rpx;
  right:-5rpx;
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius:10rpx;
}
.statusClose{
 background-color:#828a92;
 }
 .statusWill{
 background-color:#90EE90;
 }
 .statusIng{
 background-color:#ea0a7a ;
 }
 .statusOver{
 background-color:#C0C0C0;
 }
.list:last-child{
  margin-bottom: 0;
}
 /*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  font-size: 14px;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}