/* pages/leakList/leakList.wxss */
.listBox{
  width: 100%;
  padding: 0 26rpx;
  box-sizing: border-box;
}
.list_box{
  width: 100%;
  height: 228rpx;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-top: 2rpx solid #E5E5E5;
}
.list_content{
  display: flex;
}
.list_card{
  width: 274rpx;
  height: 168rpx;
  margin-right: 20rpx; 
}
.list_card>image{
  width: 274rpx;
  height: 168rpx;
  border-radius: 12rpx;
}
.list_text{
  display: flex;
  flex-direction:column;
  justify-content:space-between; 
}
.list_text view{
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.list_text text{
  font-size: 24rpx;
  color: #999999;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  font-size: 24rpx;
  color: #BDBDBD;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.d_mask{
  width:100%;
  height:100%;
  background:rgba(28,27,27,0.5);
  z-index:111;
  position:absolute;
  top:0;
}
/* 什么都没有 */
.scrollNullZb{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.scrollNullZb image{
  width: 280rpx;
  height: 200rpx; 
  margin-bottom: 20rpx;
}
.scrollNullZb text{
  font-size: 32rpx;
  color: #BDBDBD;
}
