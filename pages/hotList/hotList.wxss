/* pages/hotList/hotList.wxss */
/*热点直播*/
page{
  width: 100%; 
  height: 100%;
  background:#EEF1F6;
}
.live{
  width: 100%; 
  display: flex;
  flex-direction: column; 
  /* background:#EEF1F6; */
}
.liveBox{
  width: 100%;
  min-height: 560rpx;
  position: relative;
  margin-bottom:22rpx;
  display:flex;
  flex-direction:column;
}
.liveBackbord{
  width: 100%;
  height: 422rpx;
  background: rgb(216,216,216);
}
.liveCnt{
  width: 100%;
  min-height: 138rpx;
  display: flex; 
  flex-direction: column;
  justify-content: space-between; 
  box-sizing: border-box; 
  background: #FFFFFF;
  padding: 22rpx 30rpx;
}
.liveCntTxt{
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.btmtitle{
  display: flex;
  align-items: center;
  height: 30rpx;
}
.joinImg{
  width: 34rpx;
  height: 30rpx;
}
.countDown{
  width: 28rpx;
  height: 28rpx;
}
.desribe{
  font-size: 22rpx;
  color: #ADADAD;
  margin-left: 20rpx;
}
.tvCntBottom{
  width: 100%; 
  height: 30rpx; 
  display: flex; 
  align-items: center;
  justify-content: space-between;
} 
.btmState{
  position: absolute;
  left: 0;
  top: 0;
  width: 134rpx;
  height: 134rpx;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  font-size: 24rpx;
  color: #BDBDBD;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}