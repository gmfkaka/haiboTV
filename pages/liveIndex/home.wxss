/* pages/home/home.wxss */
@import "../hotList/hotList.wxss";
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navTop{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  z-index: 99999;
}
.navbar_content{
  margin-top: 80rpx;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  height: 80rpx;
  box-sizing: border-box;
  border-top:2rpx solid #E5E5E5;
  border-bottom:2rpx solid #E5E5E5;
}
.navbar_shadow{
  width:100%;
  height:6rpx;
  background:rgb(250,250,250);
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
}
.navbar .item.active{
  color: #00aee7;
  font-size: 36rpx;
  font-weight: 800;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  margin: auto;
  background: #00aee7;
  width: 80rpx;
  height: 6rpx;
  border-radius: 2rpx;
}
/*热点直播*/
.live{
  width: 100%; 
  display: flex;
  flex-direction: column; 
  margin-bottom: 10rpx;
  background:#EEF1F6;
}
.liveBox{
  width: 100%;
  /* height: 560rpx; */
  box-sizing: border-box; 
  position: relative;
  margin-bottom:22rpx;
}
.liveBackbord{
  width: 100%;
  height: 422rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.liveCnt{
  width: 100%;
  height: 138rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex; 
  flex-direction: column;
  justify-content: space-between; 
  box-sizing: border-box; 
  background: #FFFFFF;
  padding: 22rpx 30rpx;
}
.liveCntTxt{
  font-size: 32rpx;
  color: #333333;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.btmtitle{
  display: flex;
  align-items: center;
  height: 30rpx;
}
.joinImg{
  width: 34rpx;
  height: 30rpx;
}
.countDown{
  width: 28rpx;
  height: 28rpx;
}
.desribe{
  font-size: 22rpx;
  color: #ADADAD;
  margin-left: 20rpx;
}
/* 点播 */
.request{
 width: 100%;
 display: flex;
 justify-content: space-between;
 /* height: 320rpx; */
 padding: 28rpx 24rpx 0;
 box-sizing: border-box;
 flex-wrap: wrap;
}
.request_box{
  margin-bottom: 28rpx;
  width: 336rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction:column;
  justify-content:space-between; 

}
.request_box image{
  width: 336rpx;
  height: 212rpx;
  border-radius: 4rpx;
}
.request_title{
  width: 100%;
  /* height: 68rpx; */
  display: flex;
  flex-direction:column;
  justify-content:space-between; 
  text-align: center;
}
.request_title view{
  font-size: 24rpx;
  color: #333333;
}
.request_title text{
  font-size: 18rpx;
  color: #959595;
}
/* 电视广播 */
.television{
  width: 100%; 
  display: flex;
  flex-direction: column; 
  padding: 0 26rpx;
  box-sizing: border-box;
}
.televisionLists{
  width: 100%;
  height: 400rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
  position: relative; 
}
.tvImg{
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top: 0;
} 
.tvContent{
  position: absolute; 
  bottom: 0rpx; 
  left: 0;
  width: 100%;
  height: 122rpx;
  display: flex; 
  flex-direction: column;
  justify-content: space-between; 
  box-sizing: border-box;
  padding-left: 22rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: rgba(0,0,0,0.3)
} 
.tvCntTop{
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 1;
}
.tvCntBottom{
  width: 100%; 
  height: 30rpx; 
  display: flex; 
  align-items: center;
  justify-content: space-between;
} 
.btmState{
  position: absolute;
  left: 0;
  top: 0;
  width: 134rpx;
  height: 134rpx;
}
.btmSub{
  font-size:18rpx;
  color: #FFFFFF;
}
/* 电视广播新 */
.list_box{
  width: 100%;
  /* height: 228rpx; */
  padding: 30rpx 0;
  box-sizing: border-box;
  border-top: 2rpx solid #E5E5E5;
}
.list_box:first-child{
  border-top: none;
}
.list_content{
  display: flex;
}
.list_card{
  width: 274rpx;
  height: 168rpx;
  margin-right: 20rpx; 
}
.list_card.tv_card{
  width: 200rpx;
  height: 200rpx;
}
.list_card>image{
  width: 274rpx;
  height: 168rpx;
  border-radius: 12rpx;
}
.list_card .tv_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 0;
}
.list_text{
  display: flex;
  flex-direction:column;
  justify-content:space-between; 
}
.list_ctt{
  display: flex;
  flex-direction:column;
  justify-content:space-between; 
  min-height:90rpx;
}
.list_name{
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  text-overflow: -o-ellipsis-lastline;
overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
}
.list_img{
  display: flex;
  align-items:center;
} 
.list_img image{
  width: 52rpx;
  height: 28rpx;
  margin-right: 20rpx;
} 
.img_icon{
  width: 52rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-right: 20rpx;
  background-color: #00aee7;
  display: flex;
  align-items: center;
  border-radius: 5px;
} 
.list_img text{
  font-size: 24rpx;
  color: #999999;
} 
.img_icon_text{
  font-size: 18rpx !important;
  color:#fff !important;
  width: 52rpx;
  height: 28rpx;
  text-align: center;
}
.list_sub{
  font-size: 24rpx;
  color: #999999;
} 
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  font-size: 24rpx;
  color: #BDBDBD;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.d_mask{
  width:100%;
  height:100%;
  background:rgba(28,27,27,0.5);
  z-index:111;
  position:absolute;
  top:0;
}



/*我在现场*/
.hotLive{
  width: 100%;
  height: 302rpx;
  margin-bottom: 2rpx;
}
.hotLive image{
  width: 100%;
  height: 100%;
}

/* 主播秀 */
.anchorShow{
  background: #fff;
}
.headTab {
  padding: 15rpx 24rpx;
}

.headTab .tabBox{
  width: 100%;
  overflow-x: auto;
  box-sizing: border-box;
  overflow-y: hidden;
}
.headTab .tabBox::-webkit-scrollbar{
  display:none;
}
.headTab .tabBox .tabItem{
  flex-shrink: 0;
  height:60rpx;
  font-size:30rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:60rpx;
  padding: 0 12rpx;
  margin-right: 16rpx;
}
.headTab .tabBox .tabItem.active{
  font-size:34rpx;
  font-weight:600;
  color:rgba(39,133,228,1);
}
/* 轮播图 */
.swiperContainer{
  /* margin-top: 20rpx; */
  width: 100%;
}
.swiperItem{
  width: 100%;
  height: 350rpx;
}
.swiperItem .slide-image{
  width: 100%;
  max-height: 100%;
  background: #000;
}
/* 推荐直播 */
.tuijianIcon{
  width: 35rpx;
  height: 37rpx;
}
.title{
  font-size: 30rpx;
  font-weight:600;
  display: inline-block;
  color:rgba(51,51,51,1);
  padding: 24rpx;
}
.liveBroadcast ul{
  width: 100%;
}
.liveBroadcast ul .videoItem{
  margin-bottom: 25rpx;
  width: 50%;
  box-sizing: border-box;
}
.liveBroadcast ul .videoItem:nth-child(odd){
  border-right: 1px solid #E9E9E9;
}
/* 直播中icon */
.liveBroadcast ul .videoItem .statusIcon{
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background-color: #FE3E38;
  margin-right: 10rpx;
}
/* 预告icon */
.liveBroadcast ul .videoItem .statusIcon.yugao{
  background-color: #03A4F6;
}
/* 回顾icon */
.liveBroadcast ul .videoItem .statusIcon.huigu{
  background-color: #BDBDBD;
}
.liveBroadcast ul .videoItem .imgBox{
  position: relative;
  width:100%;
}
.liveBroadcast ul .videoItem .videoImage{
  width: 100%;
  height: 200rpx;
  background-color: #000;
}
.liveBroadcast ul .videoItem .imgBox .videoStatus{
  position: absolute;
  left: 12rpx;
  top: 10rpx;
  width:94rpx;
  height:34rpx;
  background-color:rgba(0,0,0,0.3);
  border-radius:20rpx;
  font-size:18rpx;
  font-weight:600;
  text-align: center;
  line-height: 34rpx;
  color:rgba(255,255,255,1);
}
.liveBroadcast ul .videoItem .imgBox .videoNum{
  background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0,0.4) 100%);
  position: absolute;
  /* right: 0; */
  bottom: 10rpx;
  width: 100%;
  height: 68rpx;
  font-size: 18rpx;
  font-weight: 600;
  text-align: right;
  line-height: 48rpx;
  color: rgba(255,255,255,1);

}
.liveBroadcast ul .videoItem .imgBox .videoNum .numIcon{
  width: 24rpx;
  height: 20rpx;
  display: inline-block;
  margin-right: 8rpx;
}
.videoBottom{
  /* width: 100%; */
  padding: 0 22rpx;
}
.videoBottom .userIcon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.brief{
  padding: 0 22rpx;
  display: inline-block;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  height: 92rpx;
  line-height:42rpx;
  margin-top: 13rpx;
  margin-bottom: 25rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.username{
  font-size:22rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
}
.noData{
  width: 100%;
  height: 546rpx;
  padding-top: 144rpx;
  text-align: center;
  font-size: 28rpx;
}
.noData image{
  height:180rpx;
  width:250rpx;
  display: inline-block;
}