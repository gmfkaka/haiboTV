/* pages/leakVideo/leakVideo.wxss */
.wraper_video{
  width: 100%;
  height: 422rpx;
}
.wraper_video>video{
  width: 100%;
  height: 422rpx;
}
.warper_title{
  width: 100%;
  padding: 0 24rpx;
  box-sizing: border-box;
}
.wraper_titleCnt{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  border-bottom: 2rpx solid #E5E5E5;
}
.wraper_titleCnt text{
  font-size: 30rpx;
  color: #00aee7;
  font-weight: 500;
}
.wrap_line{
  width: 80rpx;
  height: 6rpx;
  background: #00aee7;
  border-radius:4rpx; 
  margin: -6rpx auto 0;
}
.wrap_content{
  width: 100%;
  display: flex;
  padding: 18rpx 24rpx 0;
  box-sizing: border-box;
  justify-content: space-between;
  flex-wrap:wrap; 
}
.wrap_recommend{
  width: 336rpx;
  /* height: 262rpx; */
  box-sizing: border-box;
  margin-bottom: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.wrap_vodeo_box{
  width: 336rpx;
  height: 212rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.wrap_duration{
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  background:rgba(0,0,0,0.6);
  border-radius: 16rpx;
  width: 74rpx;
  height: 30rpx;
  font-size: 18rpx;
  color: #FFFFFF;
  line-height: 30rpx;
  text-align: center;
}
.wrap_vodeo_box>image{
  width: 336rpx;
  height: 212rpx;
  border-radius:4rpx; 
}
.wrap_recommend>text{
  font-size: 22rpx;
  color: #333333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.reveal{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 422rpx;
  z-index: 1;
}
.conceal{
  display: none;
  position: absolute;
  left:0;
  top:0;
  height: 422rpx;
}
.play{
  position: absolute;
  left: 0;  
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 122rpx;
  height: 122rpx;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 100%;
  font-size: 24rpx;
  color: #BDBDBD;
  height:50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
